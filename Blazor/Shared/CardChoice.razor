<img src="@ImgUrl" alt="Back of a card" draggable="true"
    @ondragstart="@(() => HandleDragStart(CardModelH))">


@code {
    [CascadingParameter] CardsContainer Container { get; set; }
    [Parameter] public CardModelHTML CardModelH { get; set; }
    [Parameter] public string ImgUrl { get; set; }

    private void HandleDragStart(CardModelHTML selectedCard)
    {
        Container.Payload = selectedCard;
    }
}